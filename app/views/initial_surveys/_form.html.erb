      <% @initial_survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group col-sm-12">
      <%= f.label :timeSpent, "1. How often do you spend time on issues related to nuclear weapons?", :class => "control-label" %><br>
      <%= f.radio_button :timeSpent, "Never" %> Never
      <%= f.radio_button :timeSpent, "Monthly" %> Monthly
      <%= f.radio_button :timeSpent, "Weekly" %> Weekly
      <%= f.radio_button :timeSpent, "Daily" %> Daily
    </div>
  </div>
  <div class="form-group col-sm-12">
    <%= f.label :currentPosition, "2. Which of the following best dcsribes your current position or employment?", :class => "control-label" %><br>
    <%= f.radio_button :currentPosition, "Federal Government" %> Federal Government
    <%= f.radio_button :currentPosition, "Contractor" %> Contractor
    <%= f.radio_button :currentPosition, "Think Tank" %> Think Tank
    <%= f.radio_button :currentPosition, "Student" %> Student
    <%= f.radio_button :currentPosition, "University" %> University
    <%= f.radio_button :currentPosition, "Non-Governmental or International Organization" %> Non-Governmental or Internal Organization
    <%= f.radio_button :currentPosition, "Other" %> Other
  </div>
  <div class="form-group col-sm-12">
    <%= f.label :positionAffiliation, "3. Which of the following best describes the national or international affiliation of your position or employment?", :class => "control-label" %><br>
